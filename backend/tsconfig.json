{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "build",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules"],
  "types": ["jest", "node"],
  "typeRoots": [
    "./node_modules/@types",
    "./src/types.d.ts"
  ],
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
